<!DOCTYPE html>
<html>
    <head>
        <title>
            Reservation Catalog
        </title>

        <!--Style Sheet-->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <link rel="stylesheet" href="reservationCatalog.css">

    </head>

    <body>
        <!--Container Panel-->
        <div class="container">
            <div class="main">
                <!--Top bar-->
                <div class="topbar">
                        <!--Search bar-->
                        <div class="search">
                            <div class="search-icon">
                                <ion-icon name="search-outline"></ion-icon>
                            </div>
                            <input class="search-input" type="search" placeholder="Search">
                        </div>
    
                        <!--Webpage Links-->
                        <a href="index.html">Logout</a>
                        <a href="labSelection.html">Add Reservation</a>
                        <a href="home_tech.html">Home</a>
                

                </div>

                <!--Side bar-->
                <div class="row justify-content-center">
                    

                    <!--About Card-->
                    <div class="col-md-8 mt-1">
                        <!--Card-->
                               {{#each combinedReservations}}
                                <div class="col-md-8 mt-1">
                                    <div class="card mb-3 content">
                                        <h3 class="m-3 pt-3"> <img src="{{this.profilePicture}}" class="rounded-circle" width="40"> {{this.name}} </h3>

                                        <div class="icon1">
                                            <ion-icon name="eye-outline"></ion-icon>
                                        </div>
                                        <div class="icon2">
                                            <ion-icon name="ban-outline"></ion-icon>
                                        </div>
                                        <div class="icon3">
                                            <ion-icon name="create-outline"></ion-icon>
                                        </div>

                                        <div class="card-body justify-content">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <h5> Lab No.</h5>
                                                </div>
                                                <div class="col-md-9 text-secondary">
                                                    {{this.room}}
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <h5> Date & Time</h5>
                                                </div>
                                                <div class="col-md-9 text-secondary">
                                                    {{this.reservation_date}} / {{this.timeName}}
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <h5> Seat Number</h5>
                                                </div>
                                                <div class="col-md-9 text-secondary">
                                                    {{this.seat}}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                    </div>
                </div>
            </div>
        </div>

        <!--Icon JavaScript-->
        <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    </body>

</html>
